<% include ../layout/layout %>

	<% include pageTitle %>

	<div class="container">

	<div class="panel-body">
		<!-- 
		<div class="container"
		data-ng-cloak -->
		<div class="container" data-ng-app="domainModule" data-ng-controller="editDomainController"><!-- directive: domainModule, which will be added as angular.module("domainModule").controller("domainController", domainController); -->

			<% include message %>

			<form class="navbar-form navbar-left" role="search" 
			method="POST" name="formDomain">
				<!-- row -->
				<div class="row">
					<div class="form-group">
						<label for="">Domain Name</label>
						&nbsp;&nbsp;

						<input type="text" class="form-control" 
						placeholder="Please Enter Domain" 
						name="domain" id="domain" 
						ng-model="domainEdit.domain_name" 
						style="width: 100%" required>

					</div>
				</div>

				<!-- row -->
				<div class="row">
					<div class="form-group">
						<label for="">Hosting</label>
						&nbsp;&nbsp;

						<!-- <textarea class="form-control" 
						placeholder="" 
						name="hosting" id="hosting" 
						rows="5" 
						ng-model="domainEdit.hosting" 
						style="width: 100%" required></textarea> -->
						<select name="hosting" id="hosting" ng-model="domainEdit.hosting">
							<option value="0">Not Hosted</option>
							<option value="1">Hosted</option>
						</select>

					</div>
				</div>

				<!-- row -->
				<div class="row">
					<div class="form-group">
						<label for="">Hosting Date</label>
						&nbsp;&nbsp;

						<input type="text" class="datepicker form-control" 
						name="hosting_date" id="hosting_date" 
						ng-model="domainEdit.hosting_date" 
						style="width: 100%" required>

					</div>
				</div>

				<!-- row -->
				<div class="row">
					<div class="form-group">
						<label for="">Expiry Date</label>
						&nbsp;&nbsp;

						<input type="text" class="datepicker form-control" 
						name="expiry_date" id="expiry_date" 
						ng-model="domainEdit.expiry_date" 
						style="width: 100%" required>

					</div>
				</div>


				<div class="row">
					<div class="form-group" style="padding-left: 40%">
						<button type="button" class="btn btn-primary" 
						ng-click="editDomain()">
							Edit Domain
						</button><!-- ng-click directory calling a function which will be added as $scope.createDomain = function(domain) {}-->
					</div>
				</div>


			</form>
		</div>
	</div>
	
	</div>
</div>

<script src="/bower_components/angular/angular.min.js"></script>
<script src="../../javascripts/app/domain/domainModule.js"></script>
<script src="../../javascripts/app/domain/domainService.js"></script>
<script src="../../javascripts/app/domain/editDomainController.js"></script>

<script src="../../javascripts/app/requiredFieldValidationService.js"></script>
<!-- controller has dependency over module and service -->
